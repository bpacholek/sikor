<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:Sikor.ViewModels;assembly=Sikor"
             
             x:Class="Sikor.Views.FailedOperations">
  <UserControl.DataContext>
    <vm:FailedOperationsViewModel/>
  </UserControl.DataContext>
  <DockPanel LastChildFill="True">
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Stretch" Height="50">
      <Button HorizontalAlignment="Stretch">Retry</Button>
      <Button HorizontalAlignment="Stretch">Delete</Button>
    </StackPanel>
    <ListBox DockPanel.Dock="Bottom" Items="{Binding FailedOperations}" SelectedItem="{Binding SelectedFailedOperation}">
      
    </ListBox>

  </DockPanel>
</UserControl>
