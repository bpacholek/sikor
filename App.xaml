             xmlns:local="clr-namespace:Sikor"
             x:Class="Sikor.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <NativeMenu.Menu>
        <NativeMenu>
        <NativeMenuItem Header="About Sikor" />
        </NativeMenu>
    </NativeMenu.Menu>
    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
